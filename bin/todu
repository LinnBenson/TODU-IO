#!/usr/bin/env php
<?php

use Todu\Bootstrap;
use Todu\Helper\Shell;

    // 引入 Composer 自动加载
    require_once 'vendor/autoload.php';
    // 初始化驱动器
    Bootstrap::init();
    // 解析命令行参数
    $_GET = Shell::validate( $argv, 'GET' );
    // 生成管理器菜单
    $menu = [
        'title' => config( 'todu.name' ).' 管理工具',
        "Version: ".config( 'todu.version' ),
        '{=}',
        ['查询组件目录', function() { return Shell::echo( true, "组件运行目录: ".ToduPath() ); }]
    ];
    Shell::menu( $menu );